{
  "name": "eslint-config-ericbiewener",
  "private": true,
  "workspaces": [
    "./*"
  ],
  "license": "ISC",
  "scripts": {
    "prettier": "prettier --write \"**/*.{ts,tsx,js,json,yml}\"",
    "eslint": "eslint --fix \"**/*.{js,jsx,ts,tsx,gql}\""
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "eslint": "6.6.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2"
  },
  "lint-staged": {
    "**/*.{json,yml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx,ts,tsx,gql}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "prettier": "1.18.2"
  }
}
